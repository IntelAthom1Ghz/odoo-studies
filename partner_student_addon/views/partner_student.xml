<odoo>
    <!-- List View para inscrição -->
    <record id="view_course_registration_tree" model="ir.ui.view">
        <field name="name">course.registration.list</field>
        <field name="model">course.registration</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree string="Inscrições">
                <field name="student_id"/>
                <field name="state"/>
                <field name="registration_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View para inscrição -->
    <record id="view_course_registration_form" model="ir.ui.view">
        <field name="name">course.registration.form</field>
        <field name="model">course.registration</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Inscrição">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="state"/>
                        <field name="registration_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View do curso -->
    <record id="view_course_list" model="ir.ui.view">
        <field name="name">course.course.list</field>
        <field name="model">course.course</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree string="Cursos">
                <field name="start_date"/>
                <field name="duration"/>
                <field name="end_date"/>
                <field name="seats"/>
                <field name="days_left"/>
                <field name="seats_left"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Cursos</field>
        <field name="res_model">course.course</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_course_registration" model="ir.actions.act_window">
        <field name="name">Inscrições</field>
        <field name="res_model">course.registration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <!-- Menu raiz SEM action -->
    <menuitem id="menu_course_root" name="Cursos"/>

    <!-- Submenus com actions -->
    <menuitem id="menu_course" name="Lista de Cursos" parent="menu_course_root" action="action_course"/>
    <menuitem id="menu_registration" name="Inscrições" parent="menu_course_root" action="action_course_registration"/>
</odoo>
